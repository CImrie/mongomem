{
  "name": "mongomem",
  "version": "0.1.0",
  "description": "In-memory MongoDB Server with Mongoose auto-connection",
  "main": "src/index.js",
  "author": "Connor Imrie",
  "license": "MIT",
  "scripts": {
    "test": "NODE_ENV=testing ava --verbose | tap-prettify -"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "match": [
      "*"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
